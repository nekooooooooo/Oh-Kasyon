    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="User Dashboard"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/button_profile"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/profile_background"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="18dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white" />

            <TextView
                android:id="@+id/text_fullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="18dp"
                android:layout_toEndOf="@+id/profile_image"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/name"
                android:textColor="#ffff"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/text_email"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_fullName"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_toStartOf="@+id/profile_button"
                android:layout_toEndOf="@+id/profile_image"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/email"
                android:textColor="#ffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_email"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/profile_button"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Email is not verified"
                android:textColor="#ffff"
                android:textSize="12sp"/>


            <ImageView
                android:id="@+id/profile_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@drawable/arrow_white"/>

        </RelativeLayout>

